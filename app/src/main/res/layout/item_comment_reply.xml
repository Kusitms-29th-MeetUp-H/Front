<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="18dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/ic_reply" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/profile"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_gravity="center"
                        android:scaleType="centerCrop"
                        android:src="@drawable/img_profile_default" />

                    <TextView
                        android:id="@+id/name"
                        style="@style/Body3_400"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="4dp"
                        android:text="작성자 명"
                        android:textColor="@color/gray_70" />

                    <TextView
                        android:id="@+id/time"
                        style="@style/Body3_400"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:text="08:00"
                        android:textColor="@color/gray_50" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/like_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="22dp"
                            android:layout_marginRight="2dp"
                            android:background="@drawable/label_gray_5_2"
                            android:gravity="center"
                            android:paddingHorizontal="10dp"
                            android:paddingVertical="2dp">

                            <ImageView
                                android:id="@+id/like_ic"
                                android:layout_width="14dp"
                                android:layout_height="14dp"
                                android:layout_marginRight="2dp"
                                android:background="@drawable/ic_thumbs_up_gray" />

                            <TextView
                                android:id="@+id/like_count"
                                style="@style/Detail_400"
                                android:layout_gravity="center_vertical"
                                android:text="0"
                                android:textColor="@color/gray_50" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/etc_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="22dp"
                            android:background="@drawable/label_gray_5_2"
                            android:gravity="center"
                            android:paddingHorizontal="8dp"
                            android:paddingVertical="4dp">

                            <ImageView
                                android:layout_width="14dp"
                                android:layout_height="14dp"
                                android:background="@drawable/ic_etc_gray" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/content"
                    style="@style/Detail_400"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="댓글 내용"
                    android:textColor="@color/gray_90" />

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:background="@color/gray_10" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>