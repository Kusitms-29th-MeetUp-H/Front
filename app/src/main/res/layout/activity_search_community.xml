<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.main.community.SearchCommunityActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="12dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/search_layout"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="44dp"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:background="@drawable/bg_edit_text">
            
            <ImageView
                android:id="@+id/search_btn"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginRight="8dp"
                android:src="@drawable/ic_search" />

            <EditText
                android:id="@+id/search_text"
                android:layout_width="0dp"
                android:layout_weight="1"
                style="@style/Body2_700"
                android:layout_gravity="center_vertical"
                android:textColor="@color/gray_70"
                android:background="@null"
                android:textColorHint="@color/gray_50"
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:hint="글 제목, 내용" />

            <ImageView
                android:id="@+id/text_cancel"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginLeft="4dp"
                android:visibility="gone"
                android:src="@drawable/ic_text_cancel"/>

        </LinearLayout>

        <TextView
            android:id="@+id/cancel_btn"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginLeft="6dp"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:background="@drawable/bg_edit_text"
            android:text="취소" />

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <LinearLayout
            android:id="@+id/init_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="150dp"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="72dp"
                android:layout_height="78dp"
                android:src="@drawable/ic_search_primary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="17dp"
                style="@style/Body2_400"
                android:textColor="@color/gray_50"
                android:text="커뮤니티의 글을 검색해보세요!" />

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical"
            android:padding="18dp"/>

    </FrameLayout>

</LinearLayout>