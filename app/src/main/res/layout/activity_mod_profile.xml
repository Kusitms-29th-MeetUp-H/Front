<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gray_5"
    tools:context=".ui.main.my.ModProfileActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginVertical="14dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/back_btn"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="15dp"
                android:background="@drawable/ic_back" />

            <TextView
                android:id="@+id/my_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Heading3"
                android:textColor="@color/gray_90"
                android:text="@string/my_profile" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:orientation="vertical" >

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_img"
                android:layout_width="68dp"
                android:layout_height="68dp"
                android:scaleType="centerCrop"
                android:layout_gravity="center" />

            <TextView
                android:id="@+id/mod_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                style="@style/Detail_400"
                android:textColor="@color/gray_70"
                android:text="@string/편집" />

            <TextView
                android:id="@+id/name_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                style="@style/Body2_400"
                android:textColor="@color/gray_90"
                android:text="@string/이름" />

            <LinearLayout
                style="@style/edit_text_box"
                android:background="@drawable/bg_edit_text">

                <EditText
                    android:id="@+id/username"
                    style="@style/Body1_400"
                    android:textColor="@color/gray_70"
                    android:background="@null"
                    android:text="이름" />

            </LinearLayout>

            <TextView
                android:id="@+id/gender_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                style="@style/Body2_400"
                android:textColor="@color/gray_90"
                android:text="@string/성별" />

            <LinearLayout
                style="@style/edit_text_box"
                android:background="@drawable/bg_edit_text">

                <TextView
                    android:id="@+id/gender"
                    style="@style/Body1_400"
                    android:textColor="@color/gray_70"
                    android:text="여성" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="12dp"
        android:padding="16dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/like_people_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            style="@style/Body2_400"
            android:textColor="@color/gray_90"
            android:text="@string/선호_인간관계" />

        <LinearLayout
            style="@style/edit_text_box"
            android:background="@drawable/bg_edit_text">

            <EditText
                android:id="@+id/like_people"
                style="@style/Body1_400"
                android:textColor="@color/gray_70"
                android:background="@null"
                android:text="새로운 사람과의 다양한 만남을 선호해요" />

        </LinearLayout>

        <TextView
            android:id="@+id/like_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            style="@style/Body2_400"
            android:textColor="@color/gray_90"
            android:text="@string/관심사" />

        <LinearLayout
            style="@style/edit_text_box"
            android:background="@drawable/bg_edit_text">

            <EditText
                android:id="@+id/like"
                style="@style/Body1_400"
                android:textColor="@color/gray_70"
                android:background="@null"
                android:text="언어교환, 음악" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:padding="16dp"
        android:orientation="horizontal" >



    </LinearLayout>

</LinearLayout>