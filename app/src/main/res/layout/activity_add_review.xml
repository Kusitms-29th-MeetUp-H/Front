<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gray_5"
    tools:context=".ui.main.my.review.AddReviewActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="16dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/back_btn"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="15dp"
            android:background="@drawable/ic_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Heading3"
            android:textColor="@color/gray_90"
            android:text="@string/리뷰작성" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Heading3"
                android:textColor="@color/gray_90"
                android:text="이름" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Heading3"
                android:textColor="@color/gray_90"
                android:text="@string/님" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/sync_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Heading3"
                android:textColor="@color/primary"
                android:text="'이름'" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Heading3"
                android:layout_marginLeft="4dp"
                android:textColor="@color/gray_90"
                android:text="@string/싱크_어떠셨나요" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Body3_400"
            android:layout_marginTop="8dp"
            android:textColor="@color/gray_50"
            android:text="@string/남겨주신_리뷰는" />

        <LinearLayout
            android:id="@+id/content_layout"
            android:layout_width="match_parent"
            android:layout_height="310dp"
            android:layout_marginTop="20dp"
            android:padding="15dp"
            android:background="@drawable/bg_edit_review_text">

            <EditText
                android:id="@+id/content"
                android:layout_width="0dp"
                android:layout_weight="1"
                style="@style/Body2_400"
                android:textColor="@color/gray_90"
                android:background="@null"
                android:textColorHint="@color/gray_30"
                android:hint="@string/리뷰를_작성해주세요" />

        </LinearLayout>
        
    </LinearLayout>

    <TextView
        android:id="@+id/done_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:layout_marginHorizontal="17dp"
        android:layout_marginBottom="30dp"
        android:text="@string/작성완료"
        android:background="@drawable/btn_gray_10"
        style="@style/Body1_400"
        android:textColor="@color/gray_70"
        android:textSize="16sp" />

</LinearLayout>